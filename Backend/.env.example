# ===========================================
# SOC DASHBOARD BACKEND CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=localhost

# HTTPS/SSL Configuration
# Set to 'true' to enable HTTPS (required for production)
ENABLE_HTTPS=false

# SSL Certificate Paths (only needed if ENABLE_HTTPS=true)
# Use absolute paths or paths relative to Backend directory
# For production, use certificates from trusted CA (Let's Encrypt, DigiCert, etc.)
# For development/testing, you can generate self-signed certificates (see README)
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.cert
SSL_CA_PATH=./certs/ca-bundle.crt

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/soc_dashboard

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secrets (512-bit cryptographically secure random keys)
# Generate strong random keys using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# IMPORTANT: Use unique keys for each environment (dev, staging, production)
# Changing these keys will invalidate all existing user sessions and tokens
JWT_SECRET=generate_your_own_jwt_secret_do_not_use_this_placeholder
JWT_REFRESH_SECRET=generate_your_own_refresh_secret_do_not_use_this_placeholder

# JWT Expiration Times
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=7d

# Password Security
BCRYPT_ROUNDS=12

# Encryption Key (For sensitive data encryption - 256-bit cryptographically secure)
# Generate a strong random key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Use a unique key for each environment (dev, staging, production)
ENCRYPTION_KEY=generate_your_own_key_do_not_use_this_placeholder_value_run_command_above

# ===========================================
# CORS & SECURITY
# ===========================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ===========================================
# EXTERNAL API INTEGRATIONS
# ===========================================

# AlienVault OTX API
ALIEN_VAULT_OTX_API_KEY=your_alienvault_api_key_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# File Upload Limits
MAX_FILE_SIZE=10485760

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Development flags
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_STACK_TRACE=true

